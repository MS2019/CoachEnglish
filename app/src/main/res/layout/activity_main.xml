        android:layout_weight="3"/>

    <fragment
        android:id="@+id/main_right_fragment"
        android:name="com.example.ms.coachenglish.MainRightFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

